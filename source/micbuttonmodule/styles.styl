// micbutton styles
#micbutton
    position absolute
    z-index 5
    top 20px
    left 20px
    width 40px
    height 40px
    box-sizing: border-box
    border solid 5px transparent
    background-color cd-space-cherry
    cursor pointer

#micbutton.on
    border solid 5px alpha(cd-princess-blue, 0.9)
